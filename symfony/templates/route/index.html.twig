{% extends 'base.html.twig' %}

{% block title %}Route index{% endblock %}

{% block body %}
    <h1>Route index</h1>
    
    <form method="get">
    <div>
        <label>Стартова локація:</label>
        <input type="text" name="start_location" value="{{ app.request.get('start_location') }}">
    </div>
    <div>
        <label>Кінцева локація:</label>
        <input type="text" name="end_location" value="{{ app.request.get('end_location') }}">
    </div>
    <div>
        <label>Дистанція (км):</label>
        <input type="text" name="distance_km" value="{{ app.request.get('distance_km') }}">
    </div>
    <div>
        <label>На сторінці:</label>
        <select name="itemsPerPage">
            {% for option in [5, 10, 20, 50] %}
                <option value="{{ option }}" {% if itemsPerPage == option %}selected{% endif %}>{{ option }}</option>
            {% endfor %}
        </select>
    </div>
    <button type="submit">Застосувати фільтри</button>
    </form>

    <table border="1" cellspacing="0" cellpadding="5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start_location</th>
                <th>End_location</th>
                <th>Distance_km</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for route in routes %}
            <tr>
                <td>{{ route.id }}</td>
                <td>{{ route.startLocation }}</td>
                <td>{{ route.endLocation }}</td>
                <td>{{ route.distanceKm }}</td>
                <td>
                    <a href="{{ path('app_route_show', {'id': route.id}) }}">show</a>
                    <a href="{{ path('app_route_edit', {'id': route.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_route_new') }}">Create new</a>

    <div class="pagination">
    {% if currentPage > 1 %}
        <a href="?page={{ currentPage - 1 }}&itemsPerPage={{ itemsPerPage }}{% if app.request.query.get('start') %}&start={{ app.request.query.get('start') }}{% endif %}{% if app.request.query.get('end') %}&end={{ app.request.query.get('end') }}{% endif %}{% if app.request.query.get('distance') %}&distance={{ app.request.query.get('distance') }}{% endif %}">« Попередня</a>
    {% endif %}

    {% for page in 1..totalPages %}
        {% if page == currentPage %}
            <span class="current">{{ page }}</span>
        {% else %}
            <a href="?page={{ page }}&itemsPerPage={{ itemsPerPage }}{% if app.request.query.get('start') %}&start={{ app.request.query.get('start') }}{% endif %}{% if app.request.query.get('end') %}&end={{ app.request.query.get('end') }}{% endif %}{% if app.request.query.get('distance') %}&distance={{ app.request.query.get('distance') }}{% endif %}">{{ page }}</a>
        {% endif %}
    {% endfor %}

    {% if currentPage < totalPages %}
        <a href="?page={{ currentPage + 1 }}&itemsPerPage={{ itemsPerPage }}{% if app.request.query.get('start') %}&start={{ app.request.query.get('start') }}{% endif %}{% if app.request.query.get('end') %}&end={{ app.request.query.get('end') }}{% endif %}{% if app.request.query.get('distance') %}&distance={{ app.request.query.get('distance') }}{% endif %}">Наступна »</a>
    {% endif %}
</div>
{% endblock %}
